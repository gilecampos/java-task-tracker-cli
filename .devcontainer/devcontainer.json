{
    "name": "Java Secure DevContainer",

    // Use a imagem oficial de Java
    "image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",

    // Recursos opcionais do container
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "none",        // usa a versão da imagem
            "installMaven": "false",  // não instala Maven
            "installGradle": "false"  // não instala Gradle
        }
    },

    // Monta a pasta do projeto do Windows dentro do container
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
    ],

    // Expõe portas do container para o host
    "forwardPorts": [8080],

    // Comandos que rodam depois que o container é criado
    "postCreateCommand": "java -version",

    // Configurações do VSCode dentro do container
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack"
            ]
        }
    },
 
    // Define o usuário que será usado dentro do container
    "remoteUser": "root"
}
